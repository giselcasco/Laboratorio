<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.edu.utn.frsf.dam.isi.laboratorio02">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListaProductosActivity" />
        <activity android:name=".AltaPedidoActivity" />
        <activity
            android:name=".HistorialPedidoActivity"
            android:label="@string/title_activity_historial_pedido" />

        <receiver
            android:name=".EstadoPedidoReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="ar.edu.utn.frsf.dam.isi.laboratorio2.ESTADO_ACEPTADO" />
                <action android:name="ar.edu.utn.frsf.dam.isi.laboratorio2.ESTADO_CANCELADO" />
                <action android:name="ar.edu.utn.frsf.dam.isi.laboratorio2.ESTADO_EN_PREPARACION" />
                <action android:name="ar.edu.utn.frsf.dam.isi.laboratorio2.ESTADO_LISTO" />
            </intent-filter>
        </receiver>

        <service
            android:name=".Servicios.PrepararPedidoService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".Servicios.RestoFirebaseInstanceIdService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".Servicios.RestoMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />
    </application>

</manifest>