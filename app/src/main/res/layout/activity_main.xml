<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/btnMainNuevoPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnNuevoPedido" />

    <Button
        android:id="@+id/btnListaProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/productList" />

    <Button
        android:id="@+id/btnHistorialPedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/historial_de_pedidos" />

</LinearLayout>